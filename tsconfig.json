{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2020",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["DOM", "ES2020"],
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "types": ["node", "obsidian"]
  },
  "include": ["src/**/*.ts"]
}
